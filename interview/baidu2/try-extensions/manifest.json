{
    "manifest_version": 2,
    "name": "ScreenShot",
    "version": "1.0",
    "description": "Easy and intuitive webpage screenshot capture tool.",
    "icons": {
        "16": "闹钟.png",
        "48": "庭院.png",
        "128": "智能.png"
    },
    "browser_action": {
        "default_icon": "智能.png",
        "default_title": "Capture screenshot"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"]
    }
}