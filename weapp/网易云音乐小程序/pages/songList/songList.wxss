/* pages/songList/songList.wxss */
page {
    padding: 10rpx 10rpx;
    box-sizing: border-box;
}
::-webkit-scrollbar{
    display: none;  /* 去除滑块 */
}
swiper {
    width: 100%;
    height: 300rpx;
    /* margin: 10rpx auto; */
    background-color: rgba(240, 240, 240, 0.5);
}
swiper swiper-item {
    width: 100%;

}
swiper-item image {
    display: block;
    width: 100%;
    height: 100%;
}
.title {
    font-style: 30rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #333;
    position: relative;
    text-indent: 30rpx;
}
.title::after {
    content: "";
    position: absolute;
    width: 5rpx;
    height: 50%;
    background-color: #cc2200;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}
.hotlist {
    height: 300rpx;
    display: flex;
    overflow: auto;
    align-items: center;
}
.hotlist .item {
width: 200rpx;
text-align: center;
margin-right: 20rpx;
}
.hotlist .item image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.hotlist .item text {
text-align: center;
font-size: 28rpx bold;
color: #4d4d4d;
}
.musicbox .item {
    display: flex;
    /* background-color: pink; */
    padding: 10rpx 0rpx;
    justify-content: space-between;
    border-bottom: 1px solid rgba(235, 228, 228,0.5);
    margin-left:32rpx;
}

.item .txtbox {
    display: flex;
    flex-direction: column;
    flex: 1;
}
.item .playimg {
    width: 100rpx;
    height: 100%;
    display: flex;
}
.item .playimg image {
    width: 55rpx;
    height: 55rpx;
    display: block;
    margin: auto;
}
.item .txtbox .mname {
    font-size: 16px;
    word-spacing: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 600rpx;
}
.item .txtbox .name {
    font-size: 11px;
    color: #888;
}
