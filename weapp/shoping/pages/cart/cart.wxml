<view class="cart">
  <scroll-view class="cart-list" scroll-y>
    <block wx:for="{{cartList}}" wx:key="index">
      <!-- cartList[index] -->
      <!-- <view>{{cartList[0].title}}</view> -->
      <cart-list-item goods="{{item}}" index="{{index}}"/>
    </block>
  </scroll-view>
  <bottom-bar 
  selected="{{isSelectedAll}}"
    price="{{totalPrice}}" 
    counter="{{totalCounter}}"
    bindtap="onSelectAll"  
  />
</view>